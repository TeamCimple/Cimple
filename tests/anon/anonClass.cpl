
struct Person {
	string name;
        
	Person(func(string)()nameSetter) {
		name = nameSetter();
	}

	~Person() { 

	}
};


string (Person *p) getName() {
	return p.name;
}


int main() {
	struct Person *graham;
	string grahamsName = "Graham Barab\n";
    string personsName;
	
	graham = make Person(func(string)() {
		return grahamsName;
	});

    personsName = graham.getName();
    printf("Person's name is %s", personsName);
    return 0;
}
